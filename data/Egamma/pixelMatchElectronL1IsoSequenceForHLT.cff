# modules to make seeds, tracks and electrons
#include "RecoEgamma/EgammaHLTProducers/data/egammaHLTChi2MeasurementEstimatorESProducer.cff"
es_module egammaHLTChi2MeasurementEstimatorESProducer =  Chi2MeasurementEstimator from "TrackingTools/KalmanUpdators/data/Chi2MeasurementEstimatorESProducer.cfi"
replace egammaHLTChi2MeasurementEstimatorESProducer.ComponentName = "egammaHLTChi2"
replace egammaHLTChi2MeasurementEstimatorESProducer.MaxChi2 = 5.
replace egammaHLTChi2MeasurementEstimatorESProducer.nSigma = 3.

#include "RecoEgamma/EgammaElectronProducers/data/electronPixelSeeds.cfi"
# module l1IsoElectronPixelSeeds = electronPixelSeeds from "RecoEgamma/EgammaElectronProducers/data/electronPixelSeeds.cfi"
include "FastSimulation/EgammaElectronAlgos/data/electronGSPixelSeeds.cfi"
module l1IsoElectronPixelSeeds = electronGSPixelSeeds from "FastSimulation/EgammaElectronAlgos/data/electronGSPixelSeeds.cfi"
replace l1IsoElectronPixelSeeds.ePhiMin1=-0.025
replace l1IsoElectronPixelSeeds.ePhiMax1=0.015
replace l1IsoElectronPixelSeeds.pPhiMin1=-0.015
replace l1IsoElectronPixelSeeds.pPhiMax1=0.025
replace l1IsoElectronPixelSeeds.pPhiMin2=-0.001
replace l1IsoElectronPixelSeeds.pPhiMax2=0.001
replace l1IsoElectronPixelSeeds.ZMin1=-15.0
replace l1IsoElectronPixelSeeds.ZMax1=15.0
replace l1IsoElectronPixelSeeds.ZMin2=-0.05
replace l1IsoElectronPixelSeeds.ZMax2=0.05

replace l1IsoElectronPixelSeeds.superClusterBarrelProducer = "correctedHybridSuperClustersL1Isolated"
replace l1IsoElectronPixelSeeds.superClusterEndcapProducer = "correctedEndcapSuperClustersWithPreshowerL1Isolated"

# CKFTrackCandidateMaker
#module ckfL1IsoTrackCandidates = ckfTrackCandidates from "RecoTracker/CkfPattern/data/CkfTrackCandidates.cfi"
#replace ckfL1IsoTrackCandidates.SeedProducer ="l1IsoElectronPixelSeeds"
module ckfL1IsoTrackCandidates = trackCandidateProducer from "FastSimulation/Tracking/data/TrackCandidateProducer.cfi"
replace ckfL1IsoTrackCandidates.SeedProducer ="l1IsoElectronPixelSeeds:"

# CTF track fit with material
module ctfL1IsoWithMaterialTracks = ctfWithMaterialTracks from "RecoTracker/TrackProducer/data/CTFFinalFitWithMaterial.cfi"
replace ctfL1IsoWithMaterialTracks.src = "ckfL1IsoTrackCandidates"
replace ctfL1IsoWithMaterialTracks.TTRHBuilder = "WithoutRefit"

# Electron collection
include "RecoEgamma/EgammaHLTProducers/data/pixelMatchElectronsL1IsoForHLT.cff"

sequence pixelMatchElectronL1IsoSequenceForHLT = {
    l1IsoElectronPixelSeeds
}
